{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "paths": {
      "*": ["node_modules/*"],
      "@common/*": ["src/common/*"],
      "@back-end/*": ["src/back-end/*"],
      "@components/*": ["src/front-end/components/*"],
      "@front-end/*": ["src/front-end/*"]
    }
  },
  "include": ["src/**/*"]
}
